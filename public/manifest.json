{
  "name": "HotWell.KZ",
  "short_name": "HotWell",
  "description": "HotWell.KZ - Управление бизнесом",
  "start_url": "/transactions",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "icons": [
    {
      "src": "/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "shortcuts": [
    {
      "name": "Транзакции",
      "short_name": "Транзакции",
      "description": "Просмотр транзакций",
      "url": "/transactions",
      "icons": [{ "src": "/icons/transactions.png", "sizes": "192x192" }]
    },
    {
      "name": "Файлы клиентов",
      "short_name": "Файлы",
      "description": "Управление файлами клиентов",
      "url": "/client-files",
      "icons": [{ "src": "/icons/files.png", "sizes": "192x192" }]
    },
    {
      "name": "Клиенты",
      "short_name": "Клиенты",
      "description": "Список клиентов",
      "url": "/clients",
      "icons": [{ "src": "/icons/clients.png", "sizes": "192x192" }]
    },
    {
      "name": "Склад",
      "short_name": "Склад",
      "description": "Управление складом",
      "url": "/warehouse",
      "icons": [{ "src": "/icons/warehouse.png", "sizes": "192x192" }]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", ".pdf", ".doc", ".docx", ".xls", ".xlsx"]
        }
      ]
    }
  }
}
